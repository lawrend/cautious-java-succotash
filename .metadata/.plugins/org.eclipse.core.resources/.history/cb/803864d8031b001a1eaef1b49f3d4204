package M12HW;

public class ServeThread extends Thread {
	
	private int cookTime;
	private int delay;
	
	public ServeThread(Food f) {
		this.serveTime = f.getServeTime(); 
	}
	
	@Override
	public void run() {
		for(int i = 0; i < cookTime; i++) {
		  try { 
			  System.out.println("Serving: " + i);
			  Thread.sleep(delay);
		  } catch(InterruptedException ex) {}
		}
	}
	

}
