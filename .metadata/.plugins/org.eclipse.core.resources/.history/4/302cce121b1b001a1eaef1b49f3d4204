package M12HW;
import java.util.*;
import java.util.concurrent.*;

public class CookThread implements Runnable {
	
	private BlockingQueue<Food> foodQueue;
	private ArrayList<Food> foodList;
	
	public CookThread(BlockingQueue foodQueue, ArrayList<Food> foodList) {
		this.foodQueue = foodQueue;
		this.foodList = foodList;
	}
	
	@Override
	public void run() {
		
		for (int i = 0; i < foodList.size() -1; i++) {
		  try { 
			  foodQueue.put(foodList.get(i));
			  System.out.println("Cooking: " + f.getName());
			  Thread.sleep(f.getCookTime());
			  
			  
		  } catch(InterruptedException ex) {}
		}
	}
	

}
